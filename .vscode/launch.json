{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch React Dashboard",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": [
        "--port",
        "5173"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "Debug React App (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "trace": true
    },
    {
      "name": "Debug React App (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "userDataDir": false
    },
    {
      "name": "Attach to React Dashboard",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Launch React App with Chrome Debugger",
      "configurations": [
        "Launch React Dashboard",
        "Debug React App (Chrome)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    },
    {
      "name": "Launch Full Stack (API + Dashboard)",
      "configurations": [
        "Launch React Dashboard"
      ],
      "preLaunchTask": "start-api-server"
    }
  ]
}